<h1 class="has-text-centered panel-heading">All Posts</h1>
 
    <% @posts.each do |post| %>
      <div class="columns is-centered">
        <div class="column is-half">
          <div class= "box">
            <strong><%= user_check(post, @user) %></strong>
            <div class="has-text-centered">
               <em ><%= post.title %></em>
               <div><%= post.body %></div> 
            </div>
          </div> 
        </div>   
      </div>               
    <% end %>

<br>
    <%= new_post_btn%> 

