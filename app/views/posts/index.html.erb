<p id="notice"><%= notice %></p>

<h1 class="has-text-centered panel-heading">All Posts</h1>

 
    <% @posts.each do |post| %>
      <div class="columns is-centered">
        <div class="column is-half">
          <div class= "box">
            <p><em ><%= user_check(post, @user) %> <em></p>
            <div class="has-text-centered">
              <p><strong><%= post.title %></strong></p>
              <p><div><%= post.body %></div></p>
            </div>
          </div> 
        </div>   
      </div>               
    <% end %>

<br>
